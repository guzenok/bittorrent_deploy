#!/bin/bash

PID_FILE=/var/lock/deploy_service.pid
LOG_FILE={{deploy.directories.log_dir}}/deploy_service.log

start() {
  nohup /usr/local/bin/deploy_service \
    -data={{deploy.directories.data_dir}} \
    -cache={{deploy.directories.cache_dir}} \
    >> $LOG_FILE 2>&1 &
}

stop() {
    kill `pgrep deploy_service` 2>/dev/null
}

# Make sure to use all our CPUs, because Consul can block a scheduler thread
export GOMAXPROCS=`nproc`

case "$1" in
    "start")
        start
        ;;
    "stop")
        stop
        ;;
    "restart")
        stop
        rm $LOG_FILE
        start
        ;;
    *)
        echo "Usage: $0 start|stop|restart"
        exit 1
        ;;
esac


